<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>


<AnchorPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.MenuController">
   <children>
      <MenuBar prefWidth="1024.0">
        <menus>
            <Menu mnemonicParsing="false" text="Home">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#showMainScreen" text="Home" />
               </items>
            </Menu>
          <Menu mnemonicParsing="false" text="Departments">
            <items>
              <MenuItem mnemonicParsing="false" text="Department overview" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Patients">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#showPatientSearchScreen" text="Find patient" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Doctors">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#showDoctorSearchScreen" text="Find doctor" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </children>
</AnchorPane>
